
intIRPin=2;
intvalvePin=13;
intIRValue;
voidsetup(){
//putyoursetupcodehere,torunonce:
pinMode(IRPin,INPUT);
pinMode(valvePin,OUTPUT);
}
voidloop(){
//putyourmaincodehere,torunrepeatedly:
IRValue=digitalRead(IRPin);
if(IRValueLOW)
{
digitalWrite(valvePin,HIGH);
}
else
{
digitalWrite(valvePin,LOW);
}
}
